// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// User model - matches @nene/shared User interface
model User {
  id             String         @id @default(cuid())
  email          String         @unique
  name           String?
  password       String         // Hashed password for authentication
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  refreshTokens  RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique // SHA-256 hash of the opaque token
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@map("refresh_tokens")
}

// Waitlist for collecting interested user emails
model Waitlist {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())

  @@map("waitlist")
}

// Blog author profiles
model Author {
  id        String     @id @default(cuid())
  name      String
  role      String?
  avatar    String?
  bio       String?
  twitter   String?
  github    String?
  posts     BlogPost[]
  createdAt DateTime   @default(now())

  @@map("authors")
}

// Blog posts
model BlogPost {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  excerpt     String
  content     String?   // MDX content body
  coverImage  String?
  category    String    // announcement | tutorial | engineering | community
  tags        String?   // JSON array stored as string (SQLite compat)
  readingTime Int       @default(0)
  featured    Boolean   @default(false)
  published   Boolean   @default(false)
  publishedAt DateTime?
  author      Author    @relation(fields: [authorId], references: [id])
  authorId    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([authorId])
  @@index([category])
  @@map("blog_posts")
}

// Showcase community projects
model ShowcaseProject {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String
  image       String?
  category    String   // ai | saas | ecommerce | opensource | devtools | creative
  tags        String?  // JSON array stored as string (SQLite compat)
  url         String?
  github      String?
  featured    Boolean  @default(false)
  approved    Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([category])
  @@map("showcase_projects")
}

// Feature descriptions for marketing page
model Feature {
  id           String   @id @default(cuid())
  title        String
  description  String
  bullets      String   // JSON array stored as string
  codeExample  String?
  codeFilename String?
  accentColor  String?
  reversed     Boolean  @default(false)
  order        Int      @default(0)
  createdAt    DateTime @default(now())

  @@map("features")
}

// Comparison table rows (nene.js vs traditional)
model ComparisonRow {
  id             String  @id @default(cuid())
  feature        String
  neneValue      String
  othersValue    String
  hasNeneCheck   Boolean @default(false)
  hasOthersCheck Boolean @default(false)
  order          Int     @default(0)

  @@map("comparison_rows")
}
