{
  "name": "my-nene-app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bash scripts/dev.sh",
    "dev:clean": "rm -rf apps/web/.next && bash scripts/dev.sh",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev:web": "turbo run dev --filter=@app/web",
    "dev:api": "turbo run dev --filter=@app/api",
    "check:web": "curl -s -o /dev/null -w '%{http_code}' http://localhost:3000",
    "check:api": "curl -s -o /dev/null -w '%{http_code}' http://localhost:4000/api/health",
    "check": "echo \"Web: $(pnpm check:web)\" && echo \"API: $(pnpm check:api)\""
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
